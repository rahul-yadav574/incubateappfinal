<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="2dp"
        >

        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
           <ImageView
               android:layout_alignTop="@+id/title"
               android:layout_alignBottom="@+id/detail"
               android:id="@+id/image"
               android:scaleType="fitXY"
               android:layout_width="200dp"
               android:src="@drawable/hack"
               android:layout_height="100dp" />


            <TextView
                android:id="@+id/title"
                android:text="Hack YMCA"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/detail"
                android:text="This Event is conducted by YMCA University and a good event to participate in."
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/time"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/time"
                android:layout_below="@+id/title"
                android:text="25-05-2016"
                android:textColor="#55000000"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </RelativeLayout>



    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="2dp"
        >

        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/image2"
                android:scaleType="fitXY"
                android:layout_width="200dp"
                android:layout_alignTop="@+id/title2"
                android:layout_alignBottom="@+id/detail2"
                android:src="@drawable/icpc"
                android:layout_height="100dp" />


            <TextView
                android:id="@+id/title2"
                android:layout_toRightOf="@+id/image2"
                android:layout_marginLeft="10dp"
                android:text="ICPC Challenge.."
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/detail2"
                android:text="This Event is conducted by YMCA University and a good event to participate in."
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/image2"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/time2"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/time2"
                android:layout_below="@+id/title2"
                android:text="25-05-2016"
                android:textColor="#55000000"
                android:layout_toRightOf="@+id/image2"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </RelativeLayout>



    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="2dp"
        >

        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_alignTop="@+id/title3"
                android:layout_alignBottom="@+id/detail3"
                android:id="@+id/image3"
                android:scaleType="fitXY"
                android:layout_width="200dp"
                android:src="@drawable/gsoc"
                android:layout_height="100dp" />


            <TextView
                android:text="GSOC 2016"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:id="@+id/title3"
                android:layout_toRightOf="@+id/image3"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/detail3"
                android:text="This Event is conducted by YMCA University and a good event to participate in."
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/image3"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/time3"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/time3"
                android:layout_below="@+id/title3"
                android:text="25-05-2016"
                android:textColor="#55000000"
                android:layout_toRightOf="@+id/image3"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>